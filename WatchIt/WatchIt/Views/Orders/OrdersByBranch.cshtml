@model IEnumerable<WatchIt.Models.BranchOrdersView>

@{
    ViewBag.Title = "Orders For Branch";
}

<h2>@ViewBag.Title</h2>

<table class="table">

    <tr>
        <th class="tableH">
            @Html.Label("Branch Name")
        </th>
        <th class="tableH">
            @Html.Label("City")
        </th>
        <th class="tableH">
            @Html.Label("Date of order")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.branchName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.branchCity)
            </td>
            <td>
                @item.orderDate.ToShortDateString()
            </td>
        </tr>
    }
</table>
